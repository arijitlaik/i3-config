# Note: to find the name of a key, use xev

set $mod Mod4

#font xft:Cousine bold 7.2
font xft:Droid Sans Mono 10

new_window pixel 3

# Window focus follows your mouse movements
focus_follows_mouse  no
# When switching focus to a window on a different output, warp the cursor to
# the center of that window
mouse_warping none

# Hide edge borders
hide_edge_borders both

# do not move to neighbouring screen with hjkl
force_focus_wrapping yes

# switch back to the previously focused workspace
# by retyping the same keys
workspace_auto_back_and_forth yes

# Delaying urgency hint reset on workspace change
force_display_urgency_hint 500 ms

# Colors
set $lightgray #AAAAAA
set $gray      #484848
set $gray2     #757575
set $darkgray  #333333
set $black     #000000
set $white     #FFFFFF
set $red       #FF0000
set $blue      #005588

client.focused          $darkgray $darkgray #FFFFFF   #333333
client.focused_inactive $darkgray $darkgray #FFFFFF   #000000
client.unfocused        $black    $black    #FFFFFF   #000000

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $HOME/.i3/tmux_terminal.sh

# kill focused window
bindsym $mod+c kill

# start dmenu (a program launcher)
set $dmenu_font   -xos4-terminus-medium-r-*-*-14-*
set $dmenu_prompt run
set $dmenu_misc   -l 4 -i
bindsym $mod+p exec dmenu_run $dmenu_misc -nb '$black' -nf '$lightgray' -sb '$darkgray' -sf '$lightgray' -fn '$dmenu_font' -p $dmenu_prompt

# screen lock
bindsym Control+$mod+l exec $HOME/.i3/i3lock-extra.sh -m pixelize

# screenshot
bindsym Print exec xfce4-screenshooter

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+v split h

# split in vertical orientation
bindsym $mod+g split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (tabbed, toggle split)
bindsym $mod+n layout tabbed
bindsym $mod+m layout toggle split

# container navigation
bindsym $mod+d focus parent
bindsym $mod+b focus child

# move container between displays
bindsym $mod+semicolon move workspace to output right

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to last workspace
bindsym $mod+6 workspace back_and_forth

# switch to next workspace
bindsym $mod+Shift+Right workspace next

# switch to next workspace
bindsym $mod+Shift+Left workspace prev

# switch to workspace
bindsym $mod+q workspace : q
bindsym $mod+w workspace : w
bindsym $mod+e workspace : e
bindsym $mod+r workspace : r
bindsym $mod+t workspace : t
bindsym $mod+y workspace : y
bindsym $mod+u workspace : u
bindsym $mod+i workspace : i
bindsym $mod+o workspace : o

# move focused container to workspace
bindsym $mod+Shift+q move container to workspace : q
bindsym $mod+Shift+w move container to workspace : w
bindsym $mod+Shift+e move container to workspace : e
bindsym $mod+Shift+r move container to workspace : r
bindsym $mod+Shift+t move container to workspace : t
bindsym $mod+Shift+y move container to workspace : y
bindsym $mod+Shift+u move container to workspace : u
bindsym $mod+Shift+i move container to workspace : i
bindsym $mod+Shift+o move container to workspace : o

bindsym $mod+x       reload
bindsym $mod+Shift+x restart
bindsym $mod+Shift+c exit

mode "resize" {
  bindsym h resize shrink width  10 px or 10 ppt
  bindsym j resize grow   height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow   width  10 px or 10 ppt

  # back to normal: Enter or Escape or q or ^[
  bindsym  Return     mode "default"
  bindsym  q          mode "default"
  bindsym  Escape     mode "default"
  bindcode Control+34 mode "default"
}

bindsym $mod+s mode "resize"

# Sound
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master  '3%+'"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master  '1%-'"
bindsym XF86AudioMute        exec "amixer -D pulse set  Master  toggle"
bindsym XF86AudioMicMute     exec "amixer -D pulse sset Capture toggle"

# Music
bindsym XF86AudioPlay exec "mpc toggle"
bindsym XF86AudioStop exec "mpc stop"
bindsym XF86AudioNext exec "mpc next"
bindsym XF86AudioPrev exec "mpc prev"

# Brightness
bindsym XF86MonBrightnessDown exec "xbacklight - 10"
bindsym XF86MonBrightnessUp   exec "xbacklight + 10"

# Touchpad
bindsym XF86TouchpadToggle    exec "synclient TouchpadOff=$(synclient | awk '/TouchpadOff/ {print ($3+1)%2}')"

# Display
bindsym XF86Display exec "arandr"

# Floating exceptions
for_window [class="Arandr"]      floating enable
for_window [class="Steam"]       floating enable
for_window [class="Wine"]        floating enable
for_window [class="YADWIN"]      floating enable border none
for_window [instance="Download"] floating enable

assign [title="Firefox"]  : w
assign [title="SMPlayer"] : y
assign [class="Skype"]    : u
assign [class="Mumble"]   : u
assign [title="Steam"]    : i

# Make the currently focused window a scratchpad
bindsym $mod+Shift+exclam move scratchpad

# Show the first scratchpad window
bindsym $mod+exclam scratchpad show

bar {
  # Conky bar
  #status_command ~/.i3/conky

  # i3blocks bar
  status_command SCRIPTS_DIR=/usr/libexec/i3blocks i3blocks -c ~/.i3/i3blocks.conf

  # i3status bar
  #status_command i3status

  position top

  # Default font, fallback font (icons)
  font xft:Droid Sans Mono, Icons 10

  colors {
    # Status line:
    statusline $lightgray
    background $black

    # Workspaces: border, background and text colors
    focused_workspace  $gray2    $darkgray $white
    active_workspace   $darkgray $darkgray $white
    inactive_workspace $black    $black    $lightgray
    urgent_workspace   $red      $red      $white

    # We do not use this since custom separators are not
    # well supported
    #separator $gray
  }
}

